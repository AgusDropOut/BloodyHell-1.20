uniform float iTime;
uniform vec2 iResolution;

out vec4 fragColor;

void main() {
vec2 uv = gl_FragCoord.xy / iResolution.xy * 2.0 - 1.0;
float r = length(uv);

// sclera blanca
vec3 col = vec3(1.0);

// iris simple animado
col = mix(col, vec3(0.0, 0.5, 0.7), smoothstep(0.2, 0.5, r + 0.1*sin(iTime)));

// pupil
col = mix(col, vec3(0.0), smoothstep(0.0, 0.15, r));

fragColor = vec4(col, 1.0);
}